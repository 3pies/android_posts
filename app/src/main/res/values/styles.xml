<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Screen">
        <item name="android:background">@color/backgroundcolor</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/fontPrimaryColor</item>
    </style>

    <style name="Title.White">
        <item name="android:textColor">@color/fontWhiteColor</item>
    </style>

    <style name="SubTitle">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">@dimen/font_size_base</item>
        <item name="android:textColor">@color/fontPrimaryColor</item>
    </style>

    <style name="SubTitle.White">
        <item name="android:textColor">@color/fontWhiteColor</item>
    </style>

    <style name="CardTitle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/fontPrimaryColor</item>
    </style>

    <style name="TitleErrorMsg">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/font_size_base</item>
        <item name="android:textColor">@color/fontWhiteColor</item>
    </style>

</resources>
